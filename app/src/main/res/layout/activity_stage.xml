<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrei.trafficsimulator.StageActivity">





 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:orientation="horizontal"
     android:layout_alignParentBottom="true"
     android:gravity="center"
     android:id="@+id/optionBar" >

  <Button
      android:id="@+id/btnIncreaseTrafficLightSpeed"
      android:background="@color/colorPrimaryDark"
      android:textColor="#ffff"
      android:text="TL Speed + "
      android:textSize="10sp"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_margin="5dp" />

  <Button
      android:id="@+id/btnDecreaseTrafficLightSpeed"
      android:background="@color/colorPrimaryDark"
      android:textColor="#ffff"
      android:text="TL Speed - "
      android:textSize="10sp"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_margin="5dp" />

  <Button
      android:id="@+id/btnSpecial"
      android:background="@color/colorPrimaryDark"
      android:textColor="#ffff"
      android:text="Add car"
      android:textSize="10sp"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_margin="5dp" />

  <Button
      android:id="@+id/btnCollision"
      android:background="@color/colorPrimaryDark"
      android:textColor="#ffff"
      android:text="Collision"
      android:textSize="10sp"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_margin="5dp" />

 </LinearLayout>

 <com.example.andrei.trafficsimulator.TrafficView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/enviroment"
     android:layout_above="@+id/optionBar"
     android:background="#b2b2b2"/>


</RelativeLayout>
